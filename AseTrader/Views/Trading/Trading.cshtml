@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="lib/jquery/dist/jquery.js"></script>

    <script type="text/javascript">
 $(function() {
        $('#btn_buy_stock_real_test').click(function() {
            var builder = {
                stock_symbol: $('#fname').val(),
                quantity: $('#lname').val(),
                price: $('#pname').val()
            };
            $.ajax({
                type: 'POST',
                data: builder,
                url: '@Url.Action("Buy_SI_Stocks_dispatcher", "Trading")',
                success: function(data) {
                    alert("The buy deal went though, wait for confirmation")
                }
            });
        })
    });
    document.getElementById("btn_buy_stock_real_test").addEventListener("click", function(event) {
        event.preventDefault()
    }); </script>

