
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

@model IActionResult


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/form-css.css" rel="stylesheet" />
    @{
        ViewData["Title"] = "View";




    }
</head>
<body>
@{
    var user = await UserManager.GetUserAsync(User);

    if (string.IsNullOrEmpty(user.secret_accesstoken))
    {
        <button ID="alpaca_auth" type="button">Authorize Alpaca</button>
    }
    else
    {
        <h1>You are already authorized</h1>
    }
}


<div class="container">

    <form class="signUp">
        <h3>Buy Stock</h3>
        <p>
            In the fields below, just<br>
            enter your stock, quantity and price.
        </p><br>
        <input class="w100" type="text" placeholder="Stock Symbol" reqired autocomplete="off" id="fname" name="fname"/>
        <input type="text" id="lname" name="lname" placeholder="Quantity" reqired/>
        <input type="text" id="pname" name="pname" placeholder="Price" reqired/>
        <button class="form-btn sx log-in" type="button">Sell</button>
        <button ID="btn_buy_stock_real_test" class="form-btn dx" type="submit">Buy</button>
    </form>
    <form class="signIn">
        <h3>Sell Stock </h3>
        <p>
            In the fields below, just<br>
            enter your stock, quantity and price.
        </p><br>
        <input class="w100" type="text" placeholder="Stock Symbol" reqired autocomplete="off" id="fname_sell" name="fname_sell"/>
        <input type="text" id="lname_sell" name="lname_sell" placeholder="Quantity" reqired/>
        <input type="text" id="pname_sell" name="pname_sell" placeholder="Price" reqired/>
        <button class="form-btn sx back" type="button">Buy</button>
        <button ID="btn_sell_stock_real_test" class="form-btn dx" type="submit">Sell</button>
    </form>
</div>

